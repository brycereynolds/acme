.result
  position relative
  padding 10px
  display flex

  &:hover
    background #ECECEC

.bullet
  font-size 2rem
  flex 0

.title
  font-size 1.3rem
  color var(--color-highlight-text)

.documentBullet
  color var(--color-document)

.personBullet
  color var(--color-person)

.messageBullet
  color var(--color-message)

.eventBullet
  color var(--color-event)

.tags
  position absolute
  right 0
  top 18px
  display flex
  flex-direction columns

.tagSource
  background var(--color-highlight-text)

.tagDocument
  background var(--color-document)

.tagPerson
  background var(--color-person)

.tagMessage
  background var(--color-message)

.tagEvent
  background var(--color-event)